<ol class="breadcrumb">
  <li>Classes</li>
  <li>{{name}}</li>
</ol>

{{#unless disableSourceCode}}
<ul class="nav nav-tabs" role="tablist">
    <li class="active">
        <a href="#infos" id="infos-tab" role="tab" data-toggle="tab">Infos</a>
    </li>
    <li>
        <a href="#source" role="tab" id="source-tab" data-toggle="tab">Source</a>
    </li>
</ul>

<div class="tab-content">
    <div class="tab-pane fade active in" id="infos">
        {{/unless}}
        <p class="comment">
            <h3>File</h3>
        </p>
        <p class="comment">
            <code>{{class.file}}</code>
        </p>

        {{#if class.description}}
            <p class="comment">
                <h3>Description</h3>
            </p>
            <p class="comment">
                {{{ class.description}}}
            </p>
        {{/if}}

        {{#if class.methods}}
        <section>
            <h3 id="methods">Methods</h3>
            <table class="table table-sm table-hover">
                <tbody>
                    {{#each class.methods}}
                        <tr>
                            <td class="col-md-3"><code>{{name}}</code></td>
                            <td class="col-md-9">
                                {{#if args}}
                                    <div><i>Signature : </i><code>{{functionSignature this}}</code></div>
                                {{/if}}
                                {{#if returnType}}
                                    <div><i>Return type : </i><code>{{returnType}}</code></div>
                                {{/if}}
                                {{#if description}}
                                    <div class="io-description">{{{description}}}</div>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        {{/if}}

        {{#if class.properties}}
        <section>
            <h3 id="inputs">Properties</h3>
            <table class="table table-sm table-hover">
                <tbody>
                    {{#each class.properties}}
                        <tr>
                            <td class="col-md-3"><code>{{name}}</code></td>
                            <td class="col-md-9">
                                {{#if type}}
                                    <div><i>Type : </i><code>{{type}}</code></div>
                                {{/if}}
                                {{#if defaultValue}}
                                    <div><i>Default value : </i><code>{{defaultValue}}</code></div>
                                {{/if}}
                                {{#if description}}
                                    <div class="io-description">{{{description}}}</div>
                                {{/if}}
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        {{/if}}
    {{#unless disableSourceCode}}
    </div>
    <div class="tab-pane fade tab-source-code" id="source">
        <pre><code class="hljs javascript">{{ class.sourceCode}}</code></pre>
    </div>
</div>
{{/unless}}
